<!-- Vanilla JS to filter items based on checked checkboxes -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const checkboxes = document.querySelectorAll('.filter-checkbox');
    const gridItems = document.querySelectorAll('.grid-item');

    function updateGrid() {
      // Get the array of checked categories.
      const selectedCategories = Array.from(checkboxes)
        .filter(cb => (cb as HTMLInputElement).checked)
        .map(cb => (cb as HTMLInputElement).value);

      // If no categories are selected, show all items
      const showAll = selectedCategories.length === 0;

      // For each grid item, show it only if its data-category is checked or if no categories are selected.
      gridItems.forEach(item => {
        const itemCategory = item.getAttribute('data-category');
        if (showAll || (itemCategory && selectedCategories.includes(itemCategory))) {
          (item as HTMLElement).style.display = '';
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });
    }

    // Listen for changes on each checkbox.
    checkboxes.forEach(cb => {
      cb.addEventListener('change', updateGrid);
    });

    // Initialize grid (now will show all items when no categories are selected)
    updateGrid();
  });
</script>
